    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="<%= asset_path 'icons/favicon-rogers/favicon-144.png' %>">
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="<%= asset_path 'icons/favicon-rogers/favicon-120.png' %>">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="<%= asset_path 'icons/favicon-rogers/favicon-114.png' %>">
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="<%= asset_path 'icons/favicon-rogers/favicon-76.png' %>">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="<%= asset_path 'icons/favicon-rogers/favicon-72.png' %>">
    <link rel="apple-touch-icon-precomposed" sizes="60x60" href="<%= asset_path 'icons/favicon-rogers/favicon-60.png' %>">
    <link rel="apple-touch-icon-precomposed" href="<%= asset_path 'icons/favicon-rogers/favicon-57.png' %>">

    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path 'icons/favicon-rogers/favicon-16.png' %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path 'icons/favicon-rogers/favicon-32.png' %>">
    <link rel="icon" type="image/png" sizes="96x96" href="<%= asset_path 'icons/favicon-rogers/favicon-96.png' %>">
    <link rel="icon" type="image/png" sizes="160x160" href="<%= asset_path 'icons/favicon-rogers/favicon-160.png' %>">
    
