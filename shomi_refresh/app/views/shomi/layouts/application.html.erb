    <title><%= page_title %></title>
    <%# prefetch dns connections for analytics scripts %>
    <link rel="dns-prefetch" href="//analytics.rogersmedia.com">
    <link rel="dns-prefetch" href="//assets.adobedtm.com">

    <%# critical css %>
    <style type="text/css"><%= Rails.application.assets["critical-styles"].to_s.html_safe %></style>

    <%# quick app setup %>
    <script id="loadcss"><%= Rails.application.assets["loaders"].to_s.html_safe %></script> 

    <%# main css files %>
    <%#= stylesheet_link_tag "font", media: "all" %>
    <%#= stylesheet_link_tag "application", media: "all" %>
    
    <%# inject enjance with js %>
    <%= javascript_include_tag "utils", async: "true" %>

    <noscript><%= stylesheet_link_tag "fontz", media: "all" %><%= stylesheet_link_tag "application", media: "all" %></noscript>

    <%# OLD IE CSS %>
