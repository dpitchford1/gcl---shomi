<% content_for :title, t('titles.home').html_safe %>

<% content_for :body_start do %>
	<div id="track1"></div>
	<div id="track2"></div>
<% end %>
<% content_for :footer do %>
	<script>
		var track1js = '', axel1 = Math.random() + "", a1 = axel1 * 10000000000000,	track2js = '', axel2 = Math.random() + "", a2 = axel2 * 10000000000000;
		track1js += '<iframe class="hidden" src="https://4498654.fls.doubleclick.net/activityi;src=4498654;type=invmedia;cat=jKeGnrDq;ord=' + a1 + '?"></iframe>';
		track2js += '<iframe class="hidden" src="https://1662406.fls.doubleclick.net/activityi;src=1662406;type=invmedia;cat=dzjbk9ms;ord=' + a2 + '?"></iframe>';
		document.getElementById('track1').innerHTML = track1js;
		document.getElementById('track2').innerHTML = track2js;

		<%= Rails.application.assets["utils/fb-script-loader"].to_s.html_safe %>
		window._fbq.push(['track', '6022576788430', {'value':'0.00','currency':'CAD'}]);
	</script>
<% end %>
<% content_for(:noscript) do %>
	<iframe class="hidden" src="https://4498654.fls.doubleclick.net/activityi;src=4498654;type=invmedia;cat=jKeGnrDq;ord=1?"></iframe>
	<iframe class="hidden" src="https://1662406.fls.doubleclick.net/activityi;src=1662406;type=invmedia;cat=dzjbk9ms;ord=1?"></iframe>
	<img class="hidden" src="https://www.facebook.com/tr?ev=6022576788430&amp;cd[value]=0.00&amp;cd[currency]=CAD&amp;noscript=1" height="1" width="1" alt="">
<% end %>


<%= render 'partials/hero_welcome' %>


