<div class="hero-basic hero-features" id="hero-features">
	<div class="fluid">
		<%= render 'partials/features_gcl' %>
	</div>
</div>


<%# IF: logged in and ineligible %>
<% if @current_session.logged? && !@current_session.profile.eligible? %>

    
	<div class="hero-basic hero-subscribe is--signedin" id="hero-subscribe">
		<div class="fluid">
			<%# <p>Modified Subscribe/Purchase Options</p> %>
			<section class="fancy-promos-2 span-of-2">

				<%= render 'partials/promo_getrogers' %>

				<%= render 'partials/promo_purchase_nonrogers_gcl' %>

				<%#= render 'partials/promo_french_package' %>
			</section>

			<p class="text-center copy-M" style="margin-top: 1.5em;"><%= t("promos.excerpt_link_account").html_safe %></p>
			<%#= t("legal.data_overage").html_safe %>
			<p class="overages"><small><%= t("legal.data_overage_new").html_safe %></small></p>
		</div>
	</div>
    
<%# IF: logged out and ineligible == default state for everyone %>
<% else %>
    
    <div class="hero-basic hero-upgrade" id="hero-upgrade">
		<section class="fluid">
			<h2 class="hide-text">To enjoy Rogers NHL GameCentre LIVEâ„¢ free, upgrade your Rogers Services.</h2>
			<%# <p>Default Subscribe/Purchase Options</p> %>
		    <%= render 'partials/promo_getrogers' %>
		</section>
	</div>

	<div class="hero-basic hero-subscribe" id="hero-subscribe">
		<div class="fluid">
			<section class="fancy-promos-2 span-of-2">
				<h2 class="hide-text">Choose how to watch hockey</h2>

				<%= render 'partials/promo_signin_rogers' %>

				<%= render 'partials/promo_purchase_nonrogers_gcl' %>

				<%#= render 'partials/promo_french_package' %>
			</section>
			<%#= t("legal.data_overage").html_safe %>
