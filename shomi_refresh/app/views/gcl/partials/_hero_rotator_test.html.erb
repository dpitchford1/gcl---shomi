
<div class="flexslider cf">
    <h3 class="h-lgt sizes-L lg-m"><%= t("pages.index.hero_rotator_slide1_heading").html_safe %></h3>
    <noscript><%= t("text.nojs").html_safe %></noscript>
    <ul class="slides">

        <li class="slide slide-1">
            <div class="slide-content">
                <div class="slide-screen" id="slide1-screen">
                    <% if I18n.locale == I18n.default_locale %>
                    <a class="ico i-video-play is--icon" id="btn-play-slide1" href="#" onclick="ga('beec4528a634c1272e86ba159d7b4b8e.send', 'event', 'Carousel Video Laptop EN', 'Started video', 'Laptop Video', {'nonInteraction': 1});"><%= I18n.t('text.vid_play') %></a>
