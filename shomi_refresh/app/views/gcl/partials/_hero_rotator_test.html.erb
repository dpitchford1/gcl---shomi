                    <a class="ico i-video-play is--icon" id="btn-play-slide1" href="#" onclick="ga('beec4528a634c1272e86ba159d7b4b8e.send', 'event', 'Carousel Video Laptop FR', 'Started video', 'Laptop Video', {'nonInteraction': 1});"><%= I18n.t('text.vid_play') %></a>
                    <%end%>
                    <div class="flex-embed flex-embed--16by9" tabindex="-1" aria-hidden="true" href="#" id="video1-wrap">
                        <div class="slides-video-wrapper is--relative" id="slide1-video">
                            <% if I18n.locale == I18n.default_locale %>
                            <iframe class="player1-en" id="player_1" src="" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                            <% else %>
                            <iframe class="player1-fr" id="player_1" src="" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
