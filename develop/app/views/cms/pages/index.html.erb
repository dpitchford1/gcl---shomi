<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Layout</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %> </td>
        <td><%= page.layout.blank? ? 'application' : page.layout %> [</td>
        <td><%= link_to 'Edit', edit_cms_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Preview', "/#{page.slug}", target: "_blank" %>]</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

