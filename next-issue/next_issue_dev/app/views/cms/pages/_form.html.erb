<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

    <%= f.input :controller, as: :text, input_html: { cols: 100, rows: 10} %>
    <%= f.input :layout %>
    <%= f.input :slug %>
    <%= f.input :title %>
    <%= f.input :body, as: :text, input_html: { cols: 100, rows: 30} %>

    <%= f.button :submit %>

<% end %>