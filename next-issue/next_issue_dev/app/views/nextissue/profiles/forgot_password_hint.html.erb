<% content_for :footer do  ajax_validation(:forgot_password, forgot_password_answer_path) end %>
<% content_for :title, t("titles.forgot_password") %>

<% content_for :below_navigation do %>
  <h3><%= t("profiles.recover.must_answer") %></h3>
  <div class="text-center sm-t-mg">
    <h3 ><strong><%= @forgot_password.password_hint %></strong></h3>
  </div>

  <%= render "layouts/form_error_header", object: @forgot_password %>
<% end %>

<section class="content-wrapper">
	<%= simple_form_for @forgot_password, remote: true, html: {class: 'general-form' }, url: forgot_password_answer_path, data: { validate: 'forgot_password'} do |f| %>
    <%= f.input :password_answer, label: false, required: true, input_html: { placeholder: t('simple_form.placeholders.answer'), autofocus: true, type: 'text' } %>


    <%= f.input :email_address, as: :hidden %>
    <%= f.input :password_hint, as: :hidden %>

    <div class="large-submission"><%= f.button :submit, t('btn.continue'), class: 'btn-light' %></div>
    <div class="submission"><%= link_to t('buttons.go_back'), forgot_password_path, class: 'btn btn-cancel' %></div>
	<% end %>
</section>
