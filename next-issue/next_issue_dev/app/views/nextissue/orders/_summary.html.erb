<% if @current_session.profile.eligible? %>

  <% if ENV['redemption_top_up'] && @current_session.profile.can_top_up? %>

    <% presenter = OrderSummaryHeader.new(@current_session, @offer, @order, @credit_card, session) %>
  <% else %>

    <% presenter = WelcomeUserSummaryHeader.new(@current_session, @order, @credit_card, session) %>
  <% end %>

<% else %>

  <% presenter = OrderSummaryHeader.new(@current_session, @offer, @order, @credit_card, session) %>
<% end %>

<% content_for :below_navigation do  %>
  <%= render partial: 'layouts/presenting_summary', locals: { p: presenter } %>
<% end %>
