<% if ENV['send_google_analytics'] %>
  <% dlb = DataLayerBuilder.new({ current_path: request.path, current_session: @current_session, order: @order, session: session, flash: flash, language: I18n.locale.to_s, offer_is_basic: @offer.try(:basic?) }) %>
  <script>
    var dataLayer = [];

    <% dlb.layers.each do |layer| %>
      dataLayer.push(JSON.parse('<%= layer.to_json.html_safe %>'));
    <% end %>

    addLoadEvent(function() {
      // add the change plan event on click of the 'change_plan_event' class (added to the upgrade/downgrade/cancel subscription links)
      if ($('.change_plan_event')) {
        $('.change_plan_event').on('click', function (e) {
          dataLayer.push({ "event": "revent", "eventCategory": "change plan", "eventAction": "opened change plan", "eventLabel": e.target.text })
        });
      }
    });
  </script>

