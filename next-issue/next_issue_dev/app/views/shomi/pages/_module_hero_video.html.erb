    <a class="flex-embed flex-embed--16by9 feature-video" tabindex="-1" aria-hidden="true" href="javascript:void(0)" id="video-play">
        <span class="i-video-play is--icon" id="ico-play"> 
            <span class="watch-text"><%= I18n.t('text.vid_play') %></span>
            <span class="icon-play"></span>
            
        </span>
        <noscript><%= t("text.nojs").html_safe %></noscript>
        
        <% if I18n.locale == I18n.default_locale %>
        <div id="vid-wrap" class="vid-wrap hidden">
            <object id="myExperience" class="BrightcoveExperience" name="home_video">
