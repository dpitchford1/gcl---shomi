<% content_for :footer do  ajax_validation(:forgot_password, forgot_password_email_path) end %>
<% content_for :title, t('titles.forgot_password').html_safe %>

<section class="content-wrapper">
	<h2 class="h-sb size-L w-ul rogers-red"><%= t("profiles.recover.forgot_password_html").html_safe %></h2>
	<%= render "layouts/form_error_header", object: @forgot_password %>
	<p><%= t("profiles.recover.enter_password") %></p>
	<%= simple_form_for @forgot_password, remote: true, html: {class: 'general-form' }, url: forgot_password_email_path, data: { validate: 'forgot_password'} do |f| %>
		<%= f.input :email_address, label: t("simple_form.labels.profile.recover_email_address"), input_html: {:title => t('errors.attributes.email_address.blank')} %>

		<p><%= link_to t('btn.cancel'), root_path, class: 'btn btn-cancel' %>
		<%= f.button :submit, t('btn.continue') %></p>
	<% end %>
</section>